#!/bin/sh

set -e

if [ ! -f /etc/ssl/certs/gitlab.gfnd.rcn-ee.org.crt ] ; then
	wget --quiet --directory-prefix=/tmp/ http://192.168.1.98/internal/gitlab.gfnd.rcn-ee.org.crt
	sync
	cp -v /tmp/gitlab.gfnd.rcn-ee.org.crt /etc/ssl/certs/
fi

if [ -f /etc/default/bb-wl18xx ] ; then
	sed -i -e 's:TETHER_ENABLED=yes:TETHER_ENABLED=no:g' /etc/default/bb-wl18xx
fi

if [ -f /etc/systemd/timesyncd.conf ] ; then
	sed -i -e 's:#NTP=:NTP=192.168.1.12:g' /etc/systemd/timesyncd.conf
	sed -i -e 's:NTP=192.168.1.24:NTP=192.168.1.12:g' /etc/systemd/timesyncd.conf

	timedatectl
	timedatectl set-timezone America/North_Dakota/Center
	timedatectl set-ntp true
	timedatectl
fi

if [ -f /lib/systemd/system/apt-daily.service ] ; then
	systemctl disable apt-daily.service || true
	systemctl disable apt-daily.timer || true
fi

if [ -f /lib/systemd/system/apt-daily-upgrade.service ] ; then
	systemctl disable apt-daily-upgrade.service || true
	systemctl disable apt-daily-upgrade.timer || true
fi

if [ -f /etc/apt/apt.conf.d/02-no-pdiffs ] ; then
	rm -f /etc/apt/apt.conf.d/02-no-pdiffs || true
fi

if [ -f /etc/apt/apt.conf.d/02-no-languages ] ; then
	rm -f /etc/apt/apt.conf.d/02-no-languages || true
fi

if [ ! -d /mnt/farm/uptime/ ] ; then
	mkdir -p /mnt/farm || true
	echo "192.168.1.3:/var/www/html/farm /mnt/farm nfs defaults" >> /etc/fstab

	if [ -d /home/voodoo/ ] ; then
		chown -R voodoo:voodoo /mnt/farm
	elif [ -d /home/debian/ ] ; then
		chown -R debian:debian /mnt/farm
	fi
fi

if [ -f /etc/apt/apt.conf.d/02apt-get-clean ] ; then
	rm -f /etc/apt/apt.conf.d/02apt-get-clean || true
fi

if [ -f /etc/apt/apt.conf.d/02compress-indexes ] ; then
	rm -f /etc/apt/apt.conf.d/02compress-indexes || true
fi

if [ -f /etc/apt/apt.conf.d/03-proxy-https ] ; then
	rm -f /etc/apt/apt.conf.d/03-proxy-https || true
fi

if [ -f /etc/apt/apt.conf.d/proxy ] ; then
	rm -f /etc/apt/apt.conf.d/proxy || true
fi

#DEBHELPER#
