#!/bin/sh
#
# see: dh_installdeb(1)

set -e

package="bb-code-server-next"
wdir="/opt/bb-code-server-next/"
wfile="/opt/bb-code-server-next/start.sh"

main_install () {
	mkdir -p ${wdir}/config/
	mkdir -p ${wdir}/extensions/

	/opt/bb-code-server-next/app/bin/code-server --config ${wdir}/config/config.yaml --extensions-dir ${wdir}/extensions/ --list-extensions

	#Git
	/opt/bb-code-server-next/app/bin/code-server --config ${wdir}/config/config.yaml --extensions-dir ${wdir}/extensions/ --install-extension donjayamanne.githistory --force

	/opt/bb-code-server-next/app/bin/code-server --config ${wdir}/config/config.yaml --extensions-dir ${wdir}/extensions/ --list-extensions

	chown -R 1000:1000 ${wdir}/config/
	chown -R 1000:1000 ${wdir}/extensions/

	echo "#!/bin/bash" > ${wfile}
	echo "/opt/bb-code-server/app/bin/code-server --auth none --disable-telemetry --disable-update-check --config ${wdir}/config/config.yaml --extensions-dir ${wdir}/extensions/ --bind-addr 0.0.0.0:3000" >> ${wfile}
	chmod +x ${wfile}

	echo "${package}:Installed"
}

case "$1" in
    configure)
        main_install
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
